<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.myclases.asignatura"
    android:id="@+id/textoAsignatura"
    android:focusable="true"
    android:background="@drawable/linedpaper">


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matemáticas"
        android:id="@+id/matematicas"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/volver"
        android:layout_alignStart="@+id/volver" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="25dp"
        android:text="@string/queclases"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fisicaa"
        android:id="@+id/fisica"
        android:layout_above="@+id/matematicas"
        android:layout_alignLeft="@+id/matematicas"
        android:layout_alignStart="@+id/fisica"
        android:layout_marginBottom="51dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inglés"
        android:id="@+id/ingles"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/matematicas"
        android:layout_alignLeft="@+id/matematicas"
        android:layout_alignStart="@+id/matematicas" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver al Menú"
        android:id="@+id/volver"
        style="bold"
        android:layout_below="@+id/ingles"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp" />

</RelativeLayout>
